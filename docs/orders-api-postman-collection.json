{
  "info": {
    "name": "Orders API",
    "description": "Cardápio - garçom, mesas, commands, carrinhos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000" },
    { "key": "access_token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Store Access",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"1234\",\n  \"slug\": \"loja-centro\"\n}"
            },
            "url": "{{base_url}}/auth/store-access"
          }
        }
      ]
    },
    {
      "name": "Stores",
      "item": [
        {
          "name": "Create Store",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Loja Centro\",\n  \"slug\": \"loja-centro\",\n  \"address\": \"Rua X, 1\"\n}"
            },
            "url": "{{base_url}}/stores"
          }
        },
        {
          "name": "List Stores",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/stores?page=1&limit=10"
          }
        },
        {
          "name": "Get Store by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/stores/1"
          }
        },
        {
          "name": "Update Store",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Loja Centro Atualizada\",\n  \"address\": \"Rua Y, 2\"\n}"
            },
            "url": "{{base_url}}/stores/1"
          }
        },
        {
          "name": "Delete Store",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/stores/1"
          }
        }
      ]
    },
